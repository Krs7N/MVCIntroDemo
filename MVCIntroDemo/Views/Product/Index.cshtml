@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "All products";
}

<span class="alert alert-danger pb-3">@TempData["ErrorMessage"]</span>

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">@ViewData["Title"]</div>
            <ul class="list-group list-group-flush">
                @foreach (var product in Model)
                {
                    <a class="text-decoration-none" asp-action="Single" asp-route-id="@product.Id">
                        <li class="list-group-item">
                            N.@product.Id: @product.Name - @product.Price lv.
                        </li>
                    </a>
                }
            </ul>
        </div>
    </div>
</div>